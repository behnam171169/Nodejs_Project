<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">دیگاه ها</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>ثبت گننده دیدگاه</th>
                                <th>مطلب</th>
                                <th>دیدگاه</th>
                                <th>تنظیمات</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <% comments.forEach(comment => { %>
                        <tr>
                            <td><%- comment.user.name %></td>
                            <td>
                                <% if(comment.course) { %> 
                                    <a href="<%- comment.course %>"><%- comment.course.title %></a>
                                <% } else if(comment.article) { %>
                                    <a href="<%- comment.article %>"><%- comment.article.title %></a>
                                <% } %>
                            </td>
                            <td><%- comment.comment %></td>
                            <td>
                                <div class="d-flex">
                                    <% if(! comment.check ){ %> 
                                    <form action="/admin/comment/<%- comment._id %>/approve?_method=PUT" method="POST">
                                        <button type="submit" class="btn btn-sm btn-success ml-3">تایید</button>
                                    </form>
                                    <% } %>
                                    <form action="/admin/comment/<%- comment._id %>?_method=DELETE" method="GET">
                                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>