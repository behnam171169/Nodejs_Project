<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">ویدیو ها</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>شماره ویدیو</th>
                                <th>نام دوره</th>
                                <th>نام ویدیو</th>
                                <th>نوع ویدیو</th>
                                <th>زمان</th>
                                <th>دانلود</th>
                                <th>تنظیمات</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <% episodes.forEach(episode => { %>
                        <tr>
                            <td><%- episode.number %></td>
                            <td><%- episode.course.title %></td>
                            <td><%- episode.title %></td>
                            <td>
                                <% if(episode.type === 'vip') { %>
                                اعضا ویژه
                                <% }else if(episode.type === 'cash') { %>
                                نقدی
                                <% } else { %>
                                رایگان
                                <% }%>
                            </td>
                            <td><%- episode.time %></td>
                            <td><%- episode.downloadCount %></td>
                            <td>
                                <div>
                                    <form action="/admin/episode/<%- episode._id %>?_method=DELETE" method="POST">
                                        <input type="hidden" name="_method" value="delete">
                                        <a href="/admin/episode/<%= episode._id %>/edit"
                                            class="btn btn-sm btn-primary">ویرایش</a>
                                        <button type="submit" class="btn btn-sm btn-danger">حذف</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>شماره ویدیو</th>
                                <th>نام دوره</th>
                                <th>نام ویدیو</th>
                                <th>نوع ویدیو</th>
                                <th>زمان</th>
                                <th>دانلود</th>
                                <th>تنظیمات</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
     
        </div>
    </div>
</div>